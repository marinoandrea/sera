<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" application="root.xml">
   <menu>
      <property name="inputmodes" value="dtmf" />
      <prompt xml:lang="en-gb">
         <!-- audio src="/audio/EN/review_category.wav"/-->
         You made the following search. Category:
         <value expr="application.category" />
         <break />
         <!-- audio src="/audio/EN/review_subcategory.wav"/-->
         Subcategory:
         <value expr="application.subCategory" />
         <break />
         <!-- audio src="/audio/EN/review_quantitymin.wav"/-->
         Minimum quantity:
         <value expr="application.quantityLowerBound" />
		 kilos
         <break />
         <!-- audio src="/audio/EN/review_quantitymax.wav"/-->
         Maximum quantity:
         <value expr="application.quantityUpperBound" />
		 kilos
         <break />
         To listen the results of your search, press 1. To make a new search, press the Asterisk.
      </prompt>
      <choice dtmf="1" next="#listenresults" />
      <choice dtmf="*" next="category.xml" />
   </menu>
   <form id="listenresults">
      <block>
         <prompt xml:lang="en-gb">
            <!-- audio src="/audio/EN/results.wav"/-->
            There is one active offering fitting your search criteria.
            <break />
            <value expr="application.quantityLowerBound" />
            kilos of
            <value expr="application.subCategory" />
            for the price of 500 Francs.
         </prompt>
		 <exit />
      </block>
   </form>
</vxml>