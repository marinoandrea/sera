<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.0"
    xmlns="http://www.w3.org/2001/vxml"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3.org/2001/vxml http://www.w3.org/TR/voicexml20/vxml.xsd">

    <menu id="category_menu">
        <property name="inputmodes" value="dtmf"/>

        <prompt>
            <if cond="language == 'en'">
                <!-- audio src="/audio/EN/category.wav"/-->
                What category of seed do you want to sell?
                <break />
                For Fonio press 1
                <break />
                For Gombo press 2
                <break />
                For Mais press 3
                <break />
                For Sorgho press 4
                <break />
                To listen to this message again press the Hashtag
                <break />
                To go back press the Asterisk
                <elseif cond="language == 'fr'" />
                <audio src="/audio/FR/category.wav"/>
            </if>
        </prompt>

        <choice dtmf="1" next="#assign_category_fonio"/>
        <choice dtmf="2" next="#assign_category_gombo"/>
        <choice dtmf="3" next="#assign_category_mais"/>
        <choice dtmf="4" next="#assign_category_sorgho" />
        <choice dtmf="#" next="#category_menu"/>
        <choice dtmf="*" next="index.xml"/>
    </menu>

    <form id="assign_category_fonio">
        <block>
            <assign value="fonio" name="category" />
            <goto next="subcategory.xml" />
        </block>
    </form>

    <form id="assign_category_gombo">
        <block>
            <assign value="gombo" name="category" />
            <goto next="subcategory.xml" />
        </block>
    </form>

    <form id="assign_category_mais">
        <block>
            <assign value="mais" name="category" />
            <goto next="subcategory.xml" />
        </block>
    </form>

    <form id="assign_category_sorgho">
        <block>
            <assign value="sorgho" name="category" />
            <goto next="subcategory.xml" />
        </block>
    </form>

</vxml>
