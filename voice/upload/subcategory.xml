<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.0"
    xmlns="http://www.w3.org/2001/vxml"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3.org/2001/vxml http://www.w3.org/TR/voicexml20/vxml.xsd">

    <menu id="subcategory_menu">
        <property name="inputmodes" value="dtmf"/>

        <prompt>
            <if cond="language == 'en'">
                <if cond="category == 'fonio'">
                    <!-- audio src="/audio/EN/subcategory_fonio.wav"/-->
                    What subcategory of Fonio do you want to sell?
                    <break />
                    For Pon de Bore press 1
                    <break />
                    For Niatia press 2
                    <break />
                    For Banco Konkountre press 3
  
                    <elseif cond="category == 'gombo'" />
                    <!-- audio src="/audio/EN/subcategory_gombo.wav"/-->
                    What subcategory of Fonio do you want to sell?
                    <break />
                    For Keleya press 1
                    <break />
                    For Sabalibougou press 2
                    <break />
                    For Gansourouni press 3

                    <elseif cond="category == 'mais'" />
                    <!-- audio src="/audio/EN/subcategory_mais.wav"/-->
                    What subcategory of Mais do you want to sell?
                    <break />
                    For Sotubaka press 1
                    <break />
                    For Nieleni press 2
                    <break />
                    For Dembaniouma press 3

                    <elseif cond="category == 'sorgho'" />
                    <!-- audio src="/audio/EN/subcategory_sorgho.wav"/-->
                    What subcategory of Sorgho do you want to sell?
                    <break />
                    For Toroba press 1
                    <break />
                    For Bobodje press 2
                    <break />
                    For Tieblen press 3
                </if>

                <!-- audio src="/audio/EN/subcategory_general.wav"/-->
                <break />
                For any Other category press 4
                <break />
                To listen to this message again press the Hashtag
                <break />
                To go back press the Asterisk

                <elseif cond="language == 'fr'" />
                <if cond="category == 'fonio'">
                    <audio src="/audio/FR/subcategory_fonio.wav"/>
                    <elseif cond="category == 'gombo'" />
                    <audio src="/audio/FR/subcategory_gombo.wav"/>
                    <elseif cond="category == 'mais'" />
                    <audio src="/audio/FR/subcategory_mais.wav"/>
                    <elseif cond="category == 'sorgho'" />
                    <audio src="/audio/FR/subcategory_sorgho.wav"/>
                    <else />
                    <audio src="/audio/FR/error.wav"/>
                </if>
            </if>
        </prompt>

        <if cond="category == 'fonio'">
            <choice dtmf="1" next="#assign_subcategory_fonio_1"/>
            <choice dtmf="2" next="#assign_subcategory_fonio_2"/>
            <choice dtmf="3" next="#assign_subcategory_fonio_3"/>

            <elseif cond="category == 'gombo'" />
            <choice dtmf="1" next="#assign_subcategory_gombo_1"/>
            <choice dtmf="2" next="#assign_subcategory_gombo_2"/>
            <choice dtmf="3" next="#assign_subcategory_gombo_3"/>

            <elseif cond="category == 'mais'" />
            <choice dtmf="1" next="#assign_subcategory_mais_1"/>
            <choice dtmf="2" next="#assign_subcategory_mais_2"/>
            <choice dtmf="3" next="#assign_subcategory_mais_3"/>

            <elseif cond="category == 'sorgho'" />
            <choice dtmf="1" next="#assign_subcategory_sorgho_1"/>
            <choice dtmf="2" next="#assign_subcategory_sorgho_2"/>
            <choice dtmf="3" next="#assign_subcategory_sorgho_3"/>
        </if>

        <choice dtmf="4" next="#assign_subcategory_other" />
        <choice dtmf="#" next="#subcategory_menu"/>
        <choice dtmf="*" next="category.xml"/>
    </menu>

    <!-- FONIO -->
    <form id="assign_subcategory_fonio_1">
        <block>
            <assign value="Pon de Bore" name="subcategory" />
            <goto next="quantity.xml" />
        </block>
    </form>

    <form id="assign_subcategory_fonio_2">
        <block>
            <assign value="Niatia" name="subcategory" />
            <goto next="quantity.xml" />
        </block>
    </form>

    <form id="assign_subcategory_fonio_3">
        <block>
            <assign value="Banco Konkountre" name="subcategory" />
            <goto next="quantity.xml" />
        </block>
    </form>
    <!-- END FONIO -->

    <!-- GOMBO -->
    <form id="assign_subcategory_gombo_1">
        <block>
            <assign value="Keleya" name="subcategory" />
            <goto next="quantity.xml" />
        </block>
    </form>

    <form id="assign_subcategory_gombo_2">
        <block>
            <assign value="Sabalibougou" name="subcategory" />
            <goto next="quantity.xml" />
        </block>
    </form>

    <form id="assign_subcategory_gombo_3">
        <block>
            <assign value="Gansourouni" name="subcategory" />
            <goto next="quantity.xml" />
        </block>
    </form>
    <!-- END GOMBO -->

    <!-- MAIS -->
    <form id="assign_subcategory_mais_1">
        <block>
            <assign value="Sotubaka" name="subcategory" />
            <goto next="quantity.xml" />
        </block>
    </form>

    <form id="assign_subcategory_mais_2">
        <block>
            <assign value="Nieleni" name="subcategory" />
            <goto next="quantity.xml" />
        </block>
    </form>

    <form id="assign_subcategory_mais_3">
        <block>
            <assign value="Dembaniouma" name="subcategory" />
            <goto next="quantity.xml" />
        </block>
    </form>
    <!-- END MAIS -->

    <!-- SORGHO -->
    <form id="assign_subcategory_sorgho_1">
        <block>
            <assign value="Toroba" name="subcategory" />
            <goto next="quantity.xml" />
        </block>
    </form>

    <form id="assign_subcategory_sorgho_2">
        <block>
            <assign value="Bobodje" name="subcategory" />
            <goto next="quantity.xml" />
        </block>
    </form>

    <form id="assign_subcategory_sorgho_3">
        <block>
            <assign value="Tieblen" name="subcategory" />
            <goto next="quantity.xml" />
        </block>
    </form>
    <!-- END SORGHO -->

    <form id="assign_subcategory_other">
        <block>
            <assign value="other" name="subcategory" />
            <goto next="quantity.xml" />
        </block>
    </form>

</vxml>
