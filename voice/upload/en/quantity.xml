<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" application="root.xml">

    <property name="inputmodes" value="dtmf"/>

    <form id="quantity_form">
        <field name="quantity">
            <property name="termchar" value="#"/>
            <grammar mode="dtmf" version="1.0" root="quantitySequence">
                <rule id="quantitySequence" scope="public">
                    <one-of>
                        <item repeat="0-">
                            <one-of>
                                <item>0</item>
                                <item>1</item>
                                <item>2</item>
                                <item>3</item>
                                <item>4</item>
                                <item>5</item>
                                <item>6</item>
                                <item>7</item>
                                <item>8</item>
                                <item>9</item>
                            </one-of>
                        </item>
                    </one-of>
                </rule>
            </grammar>

            <prompt xml:lang="en-gb">
                <!-- audio src="/audio/EN/quantity.wav"/-->
                How many kilos do you want to sell?
                <break />
                Insert the amount and then press the HashTag.
            </prompt>

            <filled>
                <assign expr="quantity" name="application.quantityKg" />
                <goto next="price.xml" />
            </filled>
        </field>
    </form>

</vxml>
