<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" application="root.xml">
   <menu>
      <property name="inputmodes" value="dtmf" />
      <prompt xml:lang="en-gb">
         <audio src="en/audio/results_category.wav" />
         <value expr="application.category" />
         <break />

         <audio src="en/audio/results_subcategory.wav" />
         <value expr="application.subCategory" />
         <break />

         <audio src="en/audio/results_quantity_min.wav" />
         <value expr="application.quantityLowerBound" />
         <audio src="en/audio/kilos.wav" />
         <break />

         <audio src="en/audio/results_quantity_max.wav" />
         <value expr="application.quantityUpperBound" />
         <audio src="en/audio/kilos.wav" />
         <break />

         <audio src="en/audio/results_quantity_instructions.wav" />
      </prompt>
      <choice dtmf="1" next="#listenresults" />
      <choice dtmf="*" next="category.xml" />
   </menu>
   <form id="listenresults">
      <block>
         <prompt xml:lang="en-gb">
            <audio src="en/audio/mock_result_1.wav" />
            <break />
            <value expr="application.quantityLowerBound" />
            <audio src="en/audio/mock_result_2.wav" />
            <value expr="application.subCategory" />
            <audio src="en/audio/mock_result_3.wav" />
         </prompt>
         <exit />
      </block>
   </form>
</vxml>
