<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1">

  <menu>
    <property name="inputmodes" value="dtmf"/>

    <prompt xml:lang="en-gb">
      <audio src="/audio/en/welcome.wav" />
    </prompt>

    <prompt xml:lang="fr-fr">
      <audio src="/audio/fr/welcome.wav" />
    </prompt>

    <choice dtmf="1" next="en/category.xml" />
    <choice dtmf="2" next="fr/category.xml" />
  </menu>

  <catch event="connection.disconnect.hangup">
    <exit/>
  </catch>

  <error>
    <log expr="'[' + Date.now().toString() + '] - Error: ' + _event" />

    <prompt xml:lang="en-gb">
      <audio src="/audio/en/error.wav" />
    </prompt>

    <prompt xml:lang="fr-fr">
      <audio src="/audio/fr/error.wav" />
    </prompt>

    <exit />
  </error>

</vxml>
